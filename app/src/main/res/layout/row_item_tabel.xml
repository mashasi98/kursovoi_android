<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="210dp"
    android:layout_marginTop="10dp"

    android:layout_marginStart="20dp"
    android:background="@drawable/double_border_thin">

    <LinearLayout
        android:id="@+id/menuItemLay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="13dp">


        <ImageButton
            android:id="@+id/card_ror_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:background="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/americano" />

        <TextView
            android:id="@+id/title_item_btn"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:fontFamily="@font/cormorant_sc_medium"
            android:text="Облепиховый чай "
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <TextView

            android:id="@+id/price_item_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:text="149P"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12dp" />


    </LinearLayout>

</LinearLayout>