<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/amountCount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="Activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="0.45"
        android:background="@drawable/layout_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView

                android:id="@+id/image_item_info"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/americano"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/from_itemBack_BTN"
                android:layout_width="35dp"
                android:layout_height="25dp"

                android:layout_marginStart="20dp"

                android:layout_marginTop="20dp"
                android:background="@drawable/sorrow_ico"
                android:backgroundTint="#ACA6A6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

        </androidx.constraintlayout.widget.ConstraintLayout>





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="0.38"
        android:background="@drawable/layout_bg"

        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/info_title_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.9"
                android:gravity="center_vertical"
                android:text="Американо"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/info_size_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="0.1"
            android:text="250ml"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/info_descript_txt"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text="so long description"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:orientation="horizontal"

            >
            <TextView
                android:id="@+id/info_price_txt"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="210Р"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                android:background="@drawable/shape_round">

                <ImageButton
                    android:id="@+id/minus_amount_btn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"

                    android:layout_height="match_parent"
                    android:layout_marginStart="3dp"
                    android:layout_weight="0.33"
                    android:backgroundTint="#07FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/minus_ico"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/amount_count"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.33"
                    android:gravity="center"

                    android:text="14"
                    android:textColor="@color/black"
                    android:textSize="10sp" />

                <ImageButton
                    android:id="@+id/plus_amount_btn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="0.33"
                    android:backgroundTint="#07FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/plus_icon"
                    android:textAlignment="center" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:background="@drawable/layout_bg">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/order_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/shape_round"
                android:src="@drawable/shape_round"
                android:text="Добавить в корзину " />

            <TextView
                android:layout_width="151dp"
                android:layout_height="46dp"
                android:gravity="center"
                android:text="Добавить в корзину"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/order_btn"
                app:layout_constraintEnd_toEndOf="@+id/order_btn"
                app:layout_constraintStart_toStartOf="@+id/order_btn"
                app:layout_constraintTop_toTopOf="@+id/order_btn" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</LinearLayout>


