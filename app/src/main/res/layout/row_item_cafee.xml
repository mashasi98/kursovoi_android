<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    android:background="#FBFAFA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"

        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageButton
            android:id="@+id/caffe_btn_item"
            android:layout_width="121dp"
            android:layout_height="120dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5sp"
            android:layout_marginBottom="5dp"
            android:layout_weight="2"
            android:background="#00FFFFFF"
            android:backgroundTint="#00FFFFFF"
            android:longClickable="false"
            android:scaleType="centerCrop"
            android:tint="#00FFFFFF"
            tools:src="@drawable/americano" />


        <LinearLayout
            android:layout_weight="55"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/caffe_txt1_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"

                android:fontFamily="@font/cormorant_sc_bold"
                android:textAlignment="textStart"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/caffe_txt2_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/cormorant_garamond_bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/caffe_text3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"

                android:layout_marginEnd="10dp"

                android:fontFamily="@font/cormorant_sc_bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/caffe_text4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"

                android:layout_marginEnd="10dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/cormorant_sc_bold"
                android:textAlignment="textStart"
                android:textColor="@color/black"
                android:textSize="11sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>