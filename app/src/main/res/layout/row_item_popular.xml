<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:layout_height="150dp"
    android:background="@drawable/double_border_thin"
    android:layout_marginEnd="10dp"
    >

    <LinearLayout
        android:id="@+id/layoutPopularLay"
        android:onClick="onClick"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">

        <ImageButton
            android:id="@+id/popular_btns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:layout_marginTop="5dp"
            android:background="#00FFFFFF"
            android:longClickable="false"
            android:scaleType="centerCrop"
            android:src="@drawable/americano" />

        <TextView
            android:id="@+id/popular_txts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:fontFamily="@font/cormorant_sc_medium"
            android:text="Облепиховый
            чай"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="10sp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/popular_txtPrise"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="149P"
                android:textAlignment="center"
                android:textSize="9dp"
                android:textColor="@color/black"
                android:gravity="center"
                tools:ignore="RtlCompat"
             />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>